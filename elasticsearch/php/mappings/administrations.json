{
  "settings": {
    "analysis": {
      "analyzer": {
        "suggest_analyzer": {
          "tokenizer": "suggest_tokenizer",
          "filter": [
            "lowercase"
          ],
          "char_filter":  [ "html_strip" ]
        },
        "evolutionAnalyzer": {
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "custom_stop",
            "custom_shingle"
          ],
          "char_filter":  [ "html_strip" ]
        }
      },
      "filter": {
        "custom_stop": {
          "type": "stop",
          "stopwords": "_italian_"
        },
        "custom_shingle": {
            "type": "shingle",
            "min_shingle_size": "2",
            "max_shingle_size": "3"
        }
      },
      "tokenizer": {
        "suggest_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
  "mappings": {
    "administration": {
      "properties": {
        "it-riuso-codiceIPA": {
          "type": "keyword"
        },
        "it-riuso-codiceIPA-label": {
          "type": "text",
          "fields": {
            "ngram": {
              "type": "text",
              "analyzer": "evolutionAnalyzer"
            }
          }
        }
      }
    }
  }
}

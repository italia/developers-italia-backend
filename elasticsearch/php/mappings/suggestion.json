{
  "settings": {
    "analysis": {
      "analyzer": {
        "suggest_analyzer": {
          "tokenizer": "suggest_tokenizer"
        }
      },
      "tokenizer": {
        "suggest_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 20,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "suggestion": {
      "dynamic_templates": [
        {
          "dynamic-suggestions": {
            "match":   "suggest*",
            "mapping": {
              "type": "completion",
              "preserve_separators": false
            }
          }
        }
      ],
      "properties": {
        "title": {
          "type": "text"
        }
      }
    }
  }
}
